
<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %>
  <%= f.text_field :content %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.fields_for :comments, post.comments.build do |comments_fields| %>
    <%= comments_fields.text_field :content %>
    <%= comments_fields.collection_select :user_id, User.all, :id, :username %>
  <% end %>

  <%= f.submit %>
<% end %>
